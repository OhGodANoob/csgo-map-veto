  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noEmit": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "types": ["node", "cypress", "@testing-library/cypress"],
    "paths": {
      "renderer/*": ["../src/renderer/*"]
    }
  },
  "include": ["**/*.ts"]
}
